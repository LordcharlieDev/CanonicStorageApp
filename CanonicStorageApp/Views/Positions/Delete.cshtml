        <div class="row m-2">
            <div class="col-md-2">
                <input type="submit" value="Delete" class="btn btn-danger w-75" />
            </div>
            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-secondary w-75">View all</a>
            </div>
        </div>
    </form>
