@model IEnumerable<CNNCStorageDB.Models.Position>

@{
    ViewData["Title"] = "Main";
}

<h1>Positions</h1>

<table id="mainTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                <a asp-action="Create" class="btn btn-sm btn-success">
                    <i class="fa-solid fa-plus"></i> New
                </a>
                <button id="printButton" class="btn btn-sm btn-success" @*onclick="printPDF()"*@>Print</button>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn"><i class="fa-solid fa-square-pen"></i> Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn"><i class="fa-solid fa-circle-info"></i> Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn"><i class="fa-solid fa-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
    {
    <script src="~/js/site.js"></script>
    <script>
        
$("#printButton").click(function () {
    window.open("@Url.Action("Positions", "Print")", "_blank",
        "menubar=no, toolbar=no, resizable=no, top=100, left=200, width=500, height=500");
});
    </script>
}