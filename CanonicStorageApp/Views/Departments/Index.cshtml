@model IEnumerable<CNNCStorageDB.Models.Department>

@{
    ViewData["Title"] = "Main";
    string? toastMsg = TempData["toastMsg"] as string;
}

<h1>Departments</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
                <a href="@Url.Action("Index", new { sort = ViewBag.NameSortParm })" class="text-decoration-none"><i class="fa-solid fa-sort"></i></a>
            </th>
            <th>
                <div class="row">
                    <div class="col-3">
                        <a asp-action="Create" class="btn btn-sm btn-success">
                            <i class="fa-solid fa-plus"></i> New
                        </a>
                    </div>
                    <div class="col-2">
                        <button onclick="window.open('@Url.Action("Print")')" class="btn m-0 p-0"><i class="fa-solid fa-print"></i>Print</button>
                    </div>
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn"><i class="fa-solid fa-square-pen"></i> Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn"><i class="fa-solid fa-circle-info"></i> Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn"><i class="fa-solid fa-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
    <div id="toast-block" data-bs-autohide="true" data-bs-animation="true" class="toast align-items-center text-white bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                @toastMsg
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

@if (toastMsg != null)
{
    @section Scripts
    {
    <script>
        var toastLiveExample = document.getElementById('toast-block');
        var toast = new bootstrap.Toast(toastLiveExample);
        toast.show();
    </script>
    }
}