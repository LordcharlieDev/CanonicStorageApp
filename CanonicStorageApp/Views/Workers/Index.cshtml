@model IEnumerable<CNNCStorageDB.Models.Worker>

@{
    ViewData["Title"] = "Main";
}

<h1>Workers</h1>

<table class="table fs-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
                <a href="@Url.Action("Index", new { sort = ViewBag.FirstNameSortParm })" class="text-decoration-none">
                    <i class="fa-solid fa-sort"></i>
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
                <a href="@Url.Action("Index", new { sort = ViewBag.LastNameSortParm })" class="text-decoration-none">
                    <i class="fa-solid fa-sort"></i>
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthdate)
                <a href="@Url.Action("Index", new { sort = ViewBag.BirthdateSortParm })" class="text-decoration-none">
                    <i class="fa-solid fa-sort"></i>
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
                <a href="@Url.Action("Index", new { sort = ViewBag.SalarySortParm })" class="text-decoration-none">
                    <i class="fa-solid fa-sort"></i>
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Premium)
                <a href="@Url.Action("Index", new { sort = ViewBag.PremiumSortParm })" class="text-decoration-none">
                    <i class="fa-solid fa-sort"></i>
                </a>
            </th>
            <th>
                Exp
                <a href="@Url.Action("Index", new { sort = ViewBag.ExpSortParm })" class="text-decoration-none">
                    <i class="fa-solid fa-sort"></i>
                </a>
            </th>
            <th>
                <div class="row">
                    <div class="col">
                        <a asp-action="Create" class="btn btn-sm btn-success">
                            <i class="fa-solid fa-plus"></i> New
                        </a>
                    </div>
                    <div class="col">
                        <button onclick="window.open('@Url.Action("Print")')" class="btn m-0 p-0"><i class="fa-solid fa-print"></i>Print</button>
                    </div>
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @item.Birthdate.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Premium)
                </td>
                <td>
                    @Html.DisplayFor(modelItem =>  item.Experience)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn"><i class="fa-solid fa-square-pen"></i> Edit</a>|
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn"><i class="fa-solid fa-circle-info"></i> Details</a>|
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn"><i class="fa-solid fa-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_ToastNotification" />